.authHidden {
    display: none;
}

.authShow {
    display: block;
}

.userinfo {
    margin-top: 20rpx;
    height: 120rpx;
    width: 100%;
    background: #FFF;
    border-left: none;
    border-right: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
}

.userinfo-avatar {
    width: 81rpx;
    height: 81rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    font-size: 32rpx;
    color: #007AFF;
}
